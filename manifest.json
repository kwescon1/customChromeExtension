{
    "name": "Custom browser background",
    "version": "1.0.0",
    "description": "This extension adds a custom background to your browser when google.com is visited",
    "manifest_version":2,
    "author": "KOD",
    "icons": {
        "16":"/images/emoji1.svg.png",
        "48": "/images/emoji1.svg.png",
        "128": "/images/emoji1.svg.png"
    },
    "page_action":{
        "default_icon": {
            "16":"/images/emoji1.svg.png",
            "48": "/images/emoji1.svg.png",
            "128": "/images/emoji1.svg.png"
        }
    },
    "content_scripts": [{
        "matches": [
            "https://www.google.com/*"
        ],
        "css" : ["main.css"]
    }]

}